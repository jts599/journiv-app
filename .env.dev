# Development environment configuration
# Used by both docker-compose.dev.yml and .devcontainer/devcontainer.json

# Database
DATABASE_URL=sqlite:////data/journiv.db
SKIP_DB_INIT=false
SKIP_DATA_SEEDING=false

# Application
APP_NAME=Journiv
APP_VERSION=0.1.0-beta.1
DEBUG=true
ENVIRONMENT=development
DOMAIN_NAME=localhost
PYTHONPATH=/app

# Security
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_V1_PREFIX=/api/v1
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CSP
ENABLE_CSP=true
ENABLE_HSTS=false
ENABLE_CSP_REPORTING=true
CSP_REPORT_URI=/api/v1/security/csp-report

# Logging
LOG_LEVEL=INFO
LOG_FILE=
LOG_DIR=/data/logs

# Media
MEDIA_ROOT=/data/media
MAX_FILE_SIZE_MB=500
ALLOWED_MEDIA_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/avi,video/mov,video/webm,audio/mpeg,audio/wav,audio/ogg,audio/m4a,audio/aac
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp,.mp4,.avi,.mov,.webm,.mp3,.wav,.ogg,.m4a,.aac
